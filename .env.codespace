# QR-Info-Portal Development Environment Configuration

# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
SECRET_KEY=dev-secret-key-change-in-production-to-random-256-bit-key

# Security (CHANGE IN PRODUCTION!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Database Configuration
# PostgreSQL (recommended for development)
DATABASE_URL=sqlite:///data/portal.db

# SQLite (fallback)
SQLITE_DATABASE_URL=sqlite:///data/portal.db

# Redis Configuration  
REDIS_URL=redis://redis:6379/0

# Site Configuration
SITE_URL=http://localhost:5000
SITE_NAME=Labor Pattaya
SITE_TIMEZONE=Asia/Bangkok

# Feature Flags
FEATURE_KIOSK_SPLIT=true
FEATURE_ANALYTICS=true
FEATURE_BOOKING=false
FEATURE_MULTI_LANGUAGE=true
FEATURE_QR_TRACKING=false
FEATURE_SOCIAL_MEDIA=true
FEATURE_LEGAL_COMPLIANCE=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Security Configuration
SESSION_TIMEOUT=3600
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Development Configuration
AUTO_RELOAD=true
TEMPLATES_AUTO_RELOAD=true
EXPLAIN_TEMPLATE_LOADING=false

# Testing Configuration  
TESTING=false
WTF_CSRF_ENABLED=true
TESTING_DATABASE_URL=postgresql://postgres:postgres@postgres:5432/qr_portal_test

# Multi-Agent Development
AGENT_ROLE=COORDINATOR
MULTI_AGENT_MODE=true
AGENT_COORDINATION_PORT=9000

# Performance Monitoring
ENABLE_PROFILING=false
ENABLE_METRICS=false
METRICS_PORT=9090

# Email Configuration (optional with Mailhog)
MAIL_SERVER=mailhog
MAIL_PORT=1025
MAIL_USE_TLS=false
MAIL_USE_SSL=false
MAIL_USERNAME=
MAIL_PASSWORD=

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7

# QR Code Configuration
QR_ERROR_CORRECTION=M
QR_BORDER=4
QR_BOX_SIZE=10
QR_VERSION=1

# Thai Language Support
THAI_FONT_ENABLED=true
THAI_FONT_FAMILY=Sarabun

# Development Helpers
FLASK_SKIP_DOTENV=false
FLASK_RUN_EXTRA_FILES=config.yml
DEBUG_TB_ENABLED=true
DEBUG_TB_INTERCEPT_REDIRECTS=false