{
  "name": "QR-Info-Portal Dev Environment",
  "dockerComposeFile": "./docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true,
      "upgradePackages": true,
      "username": "vscode",
      "userUid": "automatic",
      "userGid": "automatic"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11",
      "installTools": true,
      "optimize": true
    },
    "ghcr.io/devcontainers/features/git:1": {
      "ppa": false,
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "enableNonRootDocker": "true",
      "moby": "true"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18",
      "nodeGypDependencies": true,
      "installYarnUsingApt": true
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        // Python Development
        "ms-python.python",
        "ms-python.flake8", 
        "ms-python.black-formatter",
        "ms-python.isort",
        "ms-python.mypy-type-checker",
        "ms-python.pylint",
        "ms-toolsai.jupyter",
        
        // Flask & Web Development
        "ms-python.debugpy",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml",
        
        // Database
        "mtxr.sqltools",
        "mtxr.sqltools-driver-sqlite",
        "mtxr.sqltools-driver-pg",
        
        // HTML/CSS/JS
        "bradlc.vscode-tailwindcss",
        "formulahendry.auto-rename-tag",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-typescript-next",
        
        // Git & Version Control
        "eamodio.gitlens",
        "github.vscode-pull-request-github",
        
        // Security & Code Quality
        "ms-python.bandit",
        "ms-vscode.vscode-security-scan",
        "sonarsource.sonarlint-vscode",
        
        // Docker & DevOps
        "ms-vscode-remote.remote-containers",
        "ms-azuretools.vscode-docker",
        
        // Testing
        "ms-python.pytest",
        "hbenl.vscode-test-explorer",
        "littlefoxteam.vscode-python-test-adapter",
        
        // Productivity
        "gruntfuggly.todo-tree",
        "alefragnani.bookmarks",
        "ms-vscode.vscode-thunder-client",
        "rangav.vscode-thunder-client",
        
        // Markdown & Documentation
        "yzhang.markdown-all-in-one",
        "davidanson.vscode-markdownlint",
        
        // Multi-Agent Development
        "ms-vscode.vscode-multi-server"
      ],
      
      "settings": {
        // Python Configuration
        "python.defaultInterpreterPath": "/workspace/.venv/bin/python",
        "python.terminal.activateEnvironment": true,
        "python.linting.enabled": true,
        "python.linting.flake8Enabled": true,
        "python.linting.banditEnabled": true,
        "python.linting.mypyEnabled": true,
        "python.formatting.provider": "black",
        "python.formatting.blackArgs": ["--line-length=88"],
        "python.sortImports.args": ["--profile", "black"],
        
        // Flask Development
        "python.envFile": "${workspaceFolder}/.env",
        "python.terminal.activateEnvironment": true,
        
        // Testing
        "python.testing.pytestEnabled": true,
        "python.testing.unittestEnabled": false,
        "python.testing.pytestArgs": [
          "tests"
        ],
        "python.testing.autoTestDiscoverOnSaveEnabled": true,
        
        // Security
        "files.exclude": {
          "**/.env": false,
          "**/*.db": true,
          "**/__pycache__": true,
          "**/venv": true,
          "**/.pytest_cache": true
        },
        
        // Editor
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": true
        },
        "editor.rulers": [88],
        
        // Terminal
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "/bin/zsh"
          },
          "flask-dev": {
            "path": "/bin/bash",
            "args": ["-c", "source .venv/bin/activate && export FLASK_ENV=development && exec bash"]
          },
          "testing": {
            "path": "/bin/bash", 
            "args": ["-c", "source .venv/bin/activate && exec bash"]
          }
        },
        
        // Files
        "files.watcherExclude": {
          "**/.git/objects/**": true,
          "**/.git/subtree-cache/**": true,
          "**/node_modules/*/**": true,
          "**/.venv/**": true,
          "**/venv/**": true,
          "**/__pycache__/**": true,
          "**/.pytest_cache/**": true,
          "**/logs/**": true,
          "**/screenshots/**": true,
          "**/visual_tests/**": true
        },
        
        // Live Server
        "liveServer.settings.port": 3000,
        "liveServer.settings.CustomBrowser": "chrome",
        
        // Git
        "git.enableSmartCommit": true,
        "git.confirmSync": false,
        "git.autofetch": true,
        
        // Multi-Agent Development
        "workbench.editor.enablePreview": false,
        "workbench.startupEditor": "none",
        "explorer.confirmDelete": false,
        "explorer.confirmDragAndDrop": false
      }
    }
  },

  "forwardPorts": [5000, 5432, 6379, 3000],
  "portsAttributes": {
    "5000": {
      "label": "Flask App",
      "onAutoForward": "notify"
    },
    "5432": {
      "label": "PostgreSQL", 
      "onAutoForward": "silent"
    },
    "6379": {
      "label": "Redis",
      "onAutoForward": "silent"
    },
    "3000": {
      "label": "Live Server",
      "onAutoForward": "silent"
    }
  },

  "postCreateCommand": "bash .devcontainer/post-create.sh",
  "postStartCommand": "bash .devcontainer/post-start.sh",

  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],

  "remoteEnv": {
    "FLASK_ENV": "development",
    "FLASK_DEBUG": "1",
    "PYTHONPATH": "/workspace",
    "DATABASE_URL": "postgresql://postgres:postgres@postgres:5432/qr_portal_dev",
    "REDIS_URL": "redis://redis:6379/0"
  },

  "remoteUser": "vscode"
}